<html>
<!-- This is home page -->
<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <div class="container">
      <h2 class="mb-4"> Todo list app </h2>
  <hr>

    <b>For examples</b>
    <ul>
      <li>Buy milk and bread</li>
      <li>Workout 2pm to 4pm</li>
    </ul>

<!-- oma valikko box 1-->
<div class="jumbotron">
    <!--Formaatti lomake täyttäminen melkee & START here-->
    <form action ="/addtask" method="POST">

    <!--User type the new task here-->
    <h3>Type here new task </h3>
    <input type="text" name="newtask" placeholder="New mission">
    <button class="btn btn-success"> Add Task </button>

    <br><br><h4> Added Task </h4>

    <div class="card-subtitle text-muted mb-2">
      <!--For loop the task list & unfinished tasks-->
      <% for( var i = 0; i < task.length; i++){ %>
          <li><input type="checkbox" name="check" value="<%= task[i] %>"/> <%= task[i] %> </li>
      <% } %>
    </div>

    <!--Mark the task of list, will turned check, like done this one of the list-->
    <button class="btn btn-success" formaction="/removetask" type="submit" id="top"> Remove </button>
    
    </form> <!--Form ENDS here-->
</div>

<!-- oma valikko box 2-->
  <div class="jumbotron">

    <h2> Completed task </h2>
    <!--For loop the task list & finished tasks-->
    <div class="card-subtitle text-muted mb-2">

    <% for(var i = 0; i < complete.length; i++){ %>
        <li><input type="checkbox" checked><%= complete[i] %> </li>
    <% } %>
    </div>
    
    </div>


